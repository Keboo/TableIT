<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TableIT.Remote.ViewModels"
             x:Class="TableIT.Remote.Views.ImagesPage"
             x:DataType="vm:ImagesPageViewModel"
             BackgroundColor="{DynamicResource Background}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition />
    </Grid.RowDefinitions>

    <Button Text="Import"
            Command="{Binding ImportCommand}" 
            GridLayout.Row="0" />

    <ListView ItemsSource="{Binding Images}" GridLayout.Row="1" 
              RefreshCommand="{Binding RefreshCommand}"
              IsPullToRefreshEnabled="True"
              SelectionMode="None"
              ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate x:DataType="vm:ImageViewModel">
          <ImageCell ImageSource="{Binding Image}" 
                     Text="{Binding Name}" 
                     TextColor="{DynamicResource Foreground}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</ContentPage>
