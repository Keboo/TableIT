<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableIT.Remote.Views.ControlPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

  <Grid>
    <Grid HorizontalOptions="Center" VerticalOptions="Center" >
      <Grid.RowDefinitions>
        <RowDefinition Height="80" />
        <RowDefinition Height="80" />
        <RowDefinition Height="80" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="80" />
      </Grid.ColumnDefinitions>

      <!--
      NB: The anchors are to work around an Android issue
      https://github.com/dotnet/maui/issues/3398#issuecomment-985268105
      -->
      <Button ImageSource="arrow.svg" GridLayout.Column="1" GridLayout.Row="0" />
      <Button ImageSource="arrow.svg" GridLayout.Column="2" GridLayout.Row="1" Rotation="90" AnchorX="0.51" AnchorY="0.51" />
      <Button ImageSource="arrow.svg" GridLayout.Column="1" GridLayout.Row="2" Rotation="180" AnchorX="0.51" AnchorY="0.51"/>
      <Button ImageSource="arrow.svg" GridLayout.Column="0" GridLayout.Row="1" Rotation="270" AnchorX="0.51" AnchorY="0.51"/>

    </Grid>
  </Grid>
</ContentPage>
