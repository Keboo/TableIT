<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TableIT.Remote.ViewModels"
             xmlns:maui="clr-namespace:Microsoft.Maui;assembly=Microsoft.Maui"
             x:Class="TableIT.Remote.Views.DisconnectPage"
             x:DataType="vm:DisconnectPageViewModel"
             BackgroundColor="{DynamicResource Background}">
  <Grid>
    <StackLayout VerticalOptions="Center" Margin="10">
      <ActivityIndicator IsEnabled="True" 
                         IsRunning="True"
                         Margin="15"/>
      <Label Text="Disconnecting..."
             HorizontalOptions="Center" />
    </StackLayout>
  </Grid>
</ContentPage>
